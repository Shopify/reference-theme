{% stylesheet %}
  /* Icon */
  .icon-block {
    display: flex;
    fill: currentColor;
  }

  .icon-block > svg,
  .icon-block > img {
    height: auto;
  }

  .icon-block__icon {
    width: var(--width);
  }
{% endstylesheet %}

{%- if block.settings.icon != 'none' and block.settings.image_upload == blank -%}
  <svg
    class="icon-block__icon"
    style="--width: {{ block.settings.width }}px;"
    aria-hidden="true"
    focusable="false"
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 20 20"
    {{ block.shopify_attributes }}
  >
    {%- render 'icon', icon: block.settings.icon -%}
  </svg>
{%- elsif block.settings.image_upload != blank -%}
  {{
    block.settings.image_upload
    | image_url: width: 500
    | image_tag: widths: '50, 100, 200, 300, 400, 500', class: 'icon-block__icon'
  }}
{%- endif -%}

