{% stylesheet %}
  .line-item{
    --gap: 10px;
  }
{% endstylesheet %}

<div
  class="shopify-block--line-items {{ block.settings | class_list }} color-{{ block.settings.color_scheme }}"
  {{ block.shopify_attributes }}>
  <div class="flex col">
    {% if cart.empty? %}
      {% content_for "block", type: "container", id: "cart-empty" %}
    {% else %}
      {% for line_item in cart.items %}
        {% render 'line-item', line_item: line_item %}
      {% endfor %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Line items",
  "tag": null,
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "style.size_panel",
      "id": "size",
      "label": "Size",
      "default": {
        "width": "auto",

        "@media (--mobile)": {
          "width": "100%"
        }
      }
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Line items"
    }
  ]
}
{% endschema %}
