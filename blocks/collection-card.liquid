<div
  class="resource-card {{ block.settings | class_list }}}"
  {{ block.shopify_attributes }}
>
  <a
    class="card-link"
    href="{{ block.settings.collection.url }}"
  >
  </a>
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Collection card",
  "tag": null,
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "style.size_panel",
      "id": "size",
      "label": "Size",
      "default": {
        "width": "100%",
        "flex-grow": "1"
      }
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing"
    },
    {
      "type": "style.layout_panel",
      "id": "layout",
      "label": "Layout",
      "default": {
        "flex-wrap": "nowrap",
        "gap": "5px",
        "flex-direction": "column",
        "align-items": "flex-start",

        "@media (--mobile)": {
          "flex-wrap": "wrap"
        }
      }
    },
    {
      "type": "paragraph",
      "content": "Width is automatically optimized for mobile."
    }
  ],
  "presets": [
    {
      "name": "Collection card",
      "settings": {},
      "blocks": [
        {
          "type": "image",
          "settings": {
            "image": "{{ closest.collection.image }}"
          }
        },
        {
          "type": "collection-title",
          "settings": {
            "collection": "{{ closest.collection }}",
            "heading_size": "h4"
          }
        }
      ]
    }
  ]
}
{% endschema %}
